<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
<!--Logo-->
    <%= link_to cl_image_tag("https://upload.wikimedia.org/wikipedia/commons/thumb/8/89/Etsy_logo.svg/2560px-Etsy_logo.svg.png", height: 40, width: 50, crop: :fill), root_path %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
<!--Search bar-->
    <div class="search-bar">
      <input type="text" name="" id="" placeholder="   Search for anything">
      <button type="submit">ğŸ”</button>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active icon">
            <%= link_to cl_image_tag("v1687166508", height: 30, width: 40, crop: :fill ), products_path, class: "nav-link" %>
          </li>
          <li class="nav-item icon">

            <%= link_to cl_image_tag("https://res.cloudinary.com/dwpwmzp5b/image/upload/v1687166508/shoppingbagicon_dwl3zo.png", height: 30, width: 40, crop: :fill), order_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
