        <% else %>
          <li class="nav-item">
            <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<div class="categories-wrapper" data-controller="navbar" data-action="mouseleave->navbar#closeMenu">
  <div class="container-fluid">

    <%# Primary Categories %>
    <div class="categories primary-categories">
      <% Category.main.each do |category| %>
        <a
          class="main-dropdown"
          href="#"
          data-action="mouseover->navbar#showMenu"
          data-id="<%= category.id %>">
            <%= category.name %>
          </a>
      <% end %>
    </div>

    <%# Dropdown menu %>
    <div class="subcategories-wrapper" data-navbar-target="wrapper">
      <%= render 'shared/navigation/left-dropdown' %>
      <%= render 'shared/navigation/right-dropdown' %>
    </div>
  </div>

</div>
